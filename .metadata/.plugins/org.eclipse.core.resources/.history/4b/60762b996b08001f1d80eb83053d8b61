package com.ahmed.co;

class Arithmetic {
	int num1;
	int num2;

	void accept() {
		this.num1 = num1;
		this.num2 = num2;

	}

	void add() {
		System.out.println(num1 + num2);

	}
}

public class This {
	public static void main(String[] args) {
		int x = 10, y = 20;
		Arithmetic am = new Arithmetic();
		am.accept(x,y);
		am.add();

	}

}
