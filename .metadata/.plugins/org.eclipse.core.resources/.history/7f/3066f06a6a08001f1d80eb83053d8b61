package com.ahmed.co;

import java.util.Scanner;

class product {
	int productId;
	String productName;
	double price;

	void accept(int pid, String pname, double pr) {
		productId = pid;
		productName = pname;
		price = pr;
	}

	void display() {
		System.out.println("product id= " + productId + ",product name= " + productName + ", price=" + price);
	}
}

public class Classobjectandmethod {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter product id");
	int pid = sc.nextInt();

		sc.nextLine();

		System.out.println("Enter product name");
		String pname = sc.nextLine();

		System.out.println("Enter price");
	double pr = sc.nextDouble();
		product p = new product();
		p.accept(pid,pname,pr);
		p.display();
		Scanner sc = new Sca
		System.out.println("Enter product id");
		pid = sc.nextInt();

		sc.nextLine();

		System.out.println("Enter product name");
		pname = sc.nextLine();

		System.out.println("Enter price");
		pr = sc.nextDouble();
	}
		product p2 = new product();
		p2.accept(pid,pname,pr);
		p2.display();

	}

}
